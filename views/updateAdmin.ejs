 <%- include("header")%>


 
      <!-- ============================================================== -->
      <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
          <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
          
              <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Library
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
          <!-- ============================================================== -->
          <!-- Start Page Content -->
          <!-- ============================================================== -->
          <div class="row">
            <div class="col-md-6">
              <div class="card">
                <% var newName = update.name.split(" ") %>
                <!-- <% var newName = update.name.split(" ") %> -->
                <form class="form-horizontal" action="/admin/updataAdminData" method="post" enctype="multipart/form-data">
                  <input type="hidden" name="id" value="<%= update.id %>" />
                  <div class="card-body">
                    <h4 class="card-title">Update Admin</h4>
                    <div class="form-group row">
                      <label
                        for="fname"
                      
                        class="col-sm-3 text-end control-label col-form-label"
                        >First Name</label
                      >
                      <div class="col-sm-9">
                        <input
                          type="text"
                            name="fname"
                            value = "<%= newName[0] %>"
                          class="form-control"
                          id="fname"
                          placeholder="First Name Here"
                        />
                      </div>
                    </div>
                    <div class="form-group row">
                      <label
                        for="lname"
                        class="col-sm-3 text-end control-label col-form-label"
                        >Last Name</label
                      >
                      <div class="col-sm-9">
                        <input
                          type="text"
                            name="lname"
                          class="form-control"
                            value = "<%= newName[1] %>"

                          id="lname"
                          placeholder="Last Name Here"
                        />
                      </div>
                    </div>
                    <div class="form-group row">
                      <label
                        class="col-sm-3 text-end control-label col-form-label"
                        >Email</label
                      >
                      <div class="col-sm-9">
                        <input
                        type="email"
                            name="email"
                          class="form-control"
                          id="lname"
                            value = "<%= update.email %>"

                          placeholder="Email Here"
                        />
                      </div>
                    </div>
                    <div class="form-group row">
                      <label
                        class="col-sm-3 text-end control-label col-form-label"
                        >Password</label
                      >
                      <div class="col-sm-9">
                        <input
                          name="password"
                         
                            value = "<%= update.password %>"
                        
                          class="form-control"
                          id="lname"
                          placeholder="Password Here"
                        />
                      </div>
                    </div>
                
                   
                    <div class="form-group row">
                      <label
                        for="cono1"
                        class="col-sm-3 text-end control-label col-form-label"
                        >Message</label
                      >
                      <div class="col-sm-9">
                        <textarea class="form-control" name="message"><%= update.message %>
                        </textarea>
                      </div>
                    </div>
                           <div class="form-group row">
                    <label class="col-md-3 mt-3">Single Select</label>
                    <div class="col-md-9">
                      <select
                        class="select2 form-select shadow-none"
                        style="width: 100%; height: 36px"
                        name="city"
                      >

                 <% ["suarat","bhavnagar","ahmedabad"].map((ele)=>{ %>

                           <option <% if(update.city == ele) { %> selected <% } %> value="<%= ele %>"><%=ele%></option> 


                          <%  }) %>
                 
                 
                      </select>
                    </div>
                  </div>
              
                  <div class="form-group row">
                    <label class="col-md-3">Gender</label>
                    <div class="col-md-9">
                      <div class="form-check">
                        <input
                          type="radio"
                          class="form-check-input"
                        
                          name="gender"
                          <% if(update.gender == "male") { %>   
                            checked
                             <%} %>
                          value="male"
                          required

                        />
                        <label
                          class="form-check-label mb-0"
                          for="customControlValidation1"
                          >Male</label
                        >
                      </div>
                      <div class="form-check">
                        <input
                          type="radio"
                          class="form-check-input"
                        
                          name="gender"
                          value="female"
                          <% if(update.gender == "female") { %>   
                            checked
                             <%} %>

                          required
                        />
                        <label
                          class="form-check-label mb-0"
                          for="customControlValidation2"
                          >Female</label
                        >
                      </div>
                    
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-3">Qualification</label>
                    <div class="col-md-9">
                      <div class="form-check mr-sm-2">
                        <input
                          type="checkbox"
                           name="qualification"
                            value="12th"
                          class="form-check-input"
                          id="customControlAutosizing1"
                          <% if(update.qualification == "12th") { %> checked <% } %>
                        />
                        <label
                          class="form-check-label mb-0"
                          for="customControlAutosizing1"
                          >12th</label
                        >
                      </div>
                      <div class="form-check mr-sm-2">
                        <input
                          type="checkbox"
                           name="qualification"
                            value="graduate"
                          class="form-check-input"
                          <% if(update.qualification == "graduate") { %> checked <% } %>

                          id="customControlAutosizing2"
                        />
                        <label
                          class="form-check-label mb-0"
                          for="customControlAutosizing2"
                          >Graduate</label
                        >
                      </div>
                      <div class="form-check mr-sm-2">
                        <input
                          type="checkbox"
                          class="form-check-input"
                           name="qualification"
                           
                           value="under-graduate"
                           id="customControlAutosizing3"
                           
                           <% if(update.qualification == "under-graduate") { %> checked <% } %>
                        />
                        <label
                          class="form-check-label mb-0"
                          for="customControlAutosizing3"
                          >Under Graduate</label
                        >
                      </div>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-3">File Upload</label>
                    <div class="col-md-9">
                      <img src="/<%= update.photo%>" width="50px" alt="">
                      <div class="custom-file">

                        <input
                          type="file"
                          name="photo"
                          class="custom-file-input mt-2"
                          id="validatedCustomFile"
                          required
                        />
                        <label
                          class="custom-file-label"
                          for="validatedCustomFile"
                          >Choose file...</label
                        >
                        <div class="invalid-feedback">
                          Example invalid custom file feedback
                        </div>
                      </div>
                    </div>
                  </div>
                  </div>
                  <div class="border-top">
                    <div class="card-body">
                      <button type="submit" class="btn btn-primary">
                        Submit
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            
          
            </div>
      
          </div>
          <!-- editor -->
        
          <!-- ============================================================== -->
          <!-- End PAge Content -->
          <!-- ============================================================== -->
          <!-- ============================================================== -->
          <!-- Right sidebar -->
          <!-- ============================================================== -->
          <!-- .right-sidebar -->
          <!-- ============================================================== -->
          <!-- End Right sidebar -->
          <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
