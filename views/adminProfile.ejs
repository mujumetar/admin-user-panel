<%- include("header") %>


    <body>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Main wrapper - style you can find in pages.scss -->
        <!-- ============================================================== -->
        <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
            data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

            <!-- ============================================================== -->
            <!-- End Left Sidebar - style you can find in sidebar.scss  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Page wrapper  -->
            <!-- ============================================================== -->
            <div class="page-wrapper">
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="page-breadcrumb">
                    <div class="row">
                        <div class="col-12 d-flex no-block align-items-center">

                            <div class="ms-auto text-end">
                                <nav aria-label="breadcrumb">
                                    <a href="/admin/update/<%= locals.user.id %>" class="btn btn-warning">Update
                                        Profile</a>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Container fluid  -->
                <!-- ============================================================== -->
                <div class="container-fluid">
                    <!-- ============================================================== -->
                    <!-- Start Page Content -->
                    <!-- ============================================================== -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <img src="/<%= locals.user.photo %>" class="rounded-circle mb-3"
                                        style="width: 100px; height: 100px;" alt="">
                                    <h5 class="card-title mb-0">Personal Profile</h5>
                                </div>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Key</th>
                                            <th scope="col">Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">Name</span>
                                            </td>
                                            <td>
                                                <code><%= locals.user.name %></code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">Email</span>
                                            </td>
                                            <td>
                                                <code><%= locals.user.email %></code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span class="badge bg-success">City</span>
                                            </td>
                                            <td>
                                                <code><%= locals.user.city %></code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span class="badge bg-danger">Gender</span>
                                            </td>
                                            <td>
                                                <code><%= locals.user.gender %></code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span class="badge bg-warning">Qualification</span>
                                            </td>
                                            <td>
                                                <code><%= locals.user.qualification %></code>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span class="badge bg-dark">Message</span>
                                            </td>
                                            <td>
                                                <code><%= locals.user.message %></code>
                                            </td>
                                        </tr>



                                    </tbody>
                                </table>

                                
                            </div>
                           


                            <%- include("footer") %>